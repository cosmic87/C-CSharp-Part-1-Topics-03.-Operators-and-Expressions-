using System;
class Program
    {
        static void Main()
        {
        double a = double.Parse(Console.ReadLine());
        double b = double.Parse(Console.ReadLine());
        double area = a * b;
        double perimeter = 2 * (a + b);
        Console.WriteLine("{0:0.00} {1:0.00}", area, perimeter);
        }
    }

