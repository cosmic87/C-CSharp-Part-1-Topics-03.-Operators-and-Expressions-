using System;
class Program
    {
    static void Main()
    {
        int x = int.Parse(Console.ReadLine());
        int a = x % 10;
        int b = x / 10 % 10;
        int c = x / 100 % 10;
        int d = x / 1000 % 10;
        Console.WriteLine(a + b + c + d);
        Console.WriteLine("{3}{2}{1}{0}", d, c, b, a);
        Console.WriteLine("{0}{3}{2}{1}",a, b, c,d);
        Console.WriteLine("{0}{1}{2}{3}", d, b, c, a);   
        }
    }
